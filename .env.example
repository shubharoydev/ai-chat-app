# --- Application Global Settings ---
# Used by docker-compose.yml to configure services

# Port configuration
PORT=3000

# Allowed frontend origin
CLIENT_ORIGIN=http://localhost:5173

# MongoDB connection URI
# Note: When running in Docker, this should point to the mongodb service name if applicable
MONGODB_URI=mongodb://localhost:27017/chatapp

# Redis connection URL
REDIS_URL=redis://localhost:6379


# --- Security ---
JWT_ACCESS_SECRET=your-jwt-access-secret
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=28d

# --- AI Services ---
GEMINI_API_KEY=your-gemini-api-key

# --- Shield/WAF ---
ARCJET_ENV=development
ARCJET_KEY=your-arcjet-key


# --- Kafka Configuration ---
KAFKA_CLIENT_ID=chat-app

# 1. DOCKER COMPOSE CONFIGURATION
# Best for running the entire stack in Docker.
# Uses internal Docker network aliases.
KAFKA_BROKERS=kafka:29092,kafka2:29093,kafka3:29094

# 2. CLOUD KAFKA CONFIGURATION (Optional Override)
# SERVICE_URI=your-kafka-service-uri
# HOST=your-kafka-host
# KAFKA_PORT=your_kafka_port
# KAFKA_USERNAME=your-kafka-username
# KAFKA_PASSWORD=your-kafka-password
# KAFKA_CA_CERT_PATH=path-to-your-ca.pem

