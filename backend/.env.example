# Port on which the backend server will run
PORT=3000

# Allowed frontend origin (Vite default)
CLIENT_ORIGIN=http://localhost:5173

# MongoDB connection URI
# Ensure MongoDB is running locally or provide a cloud URI
MONGODB_URI=mongodb://localhost:27017/chatapp

# Redis connection URL
# Ensure Redis is running locally or provide a cloud URL
REDIS_URL=redis://localhost:6379


# --- Security (JWT) ---
JWT_ACCESS_SECRET=your-jwt-access-secret
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=28d

# Environment (development | production)
NODE_ENV=production


# --- AI Integration ---
# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key


# --- Security (Arcjet) ---
# Arcjet environment (development | production)
ARCJET_ENV=development
# Arcjet API key
ARCJET_KEY=your-arcjet-key


# --- Kafka Configuration ---

# 1. LOCAL DEVELOPMENT (Host Machine)
# Use this when running 'npm run dev' locally on your machine, 
# connecting to Kafka running in Docker (ports exposed to localhost).
KAFKA_CLIENT_ID=chat-app
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094

# 2. DOCKER DEVELOPMENT (Inside Container)
# Use this if you are running the backend INSIDE Docker (e.g. via docker-compose).
# KAFKA_BROKERS=kafka:29092,kafka2:29093,kafka3:29094

# 3. CLOUD KAFKA (Aiven / Confluent)
# Uncomment and configure these for Cloud Kafka.
# SERVICE_URI=your-kafka-service-uri
# HOST=your-kafka-host
# KAFKA_PORT=your_kafka_port
# KAFKA_USERNAME=your-kafka-username
# KAFKA_PASSWORD=your-kafka-password
# KAFKA_CA_CERT_PATH=./certs/ca.pem 
